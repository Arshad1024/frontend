{% extends 'base.html.twig' %}
{% form_theme searchForm 'components/forms/search/searchFields.html.twig' %}



{% block body %}

    <div class="vertical-center">
        <div class="container wrapper">
            <div class="row">
                <div class="col-lg-12 col-sm-12 col-md-12 col-xl-12">

                        <div class="row">
                            <h2 class="center-block text-center">Find Insurance Policies</h2>




                           </div>


                    {% if form_errors(searchForm) is not empty %}
                        <div class="alert alert-danger">{{ form_errors(searchForm) }}</div>
                    {% endif %}


                    {% if errorMessage is not empty %}
                        <div class="alert alert-warning">{{ errorMessage }}</div>
                    {% endif %}



                            {{ form_start(searchForm,{'attr':{'class':'form-group'}}) }}


                            {{ form_end(searchForm) }}

                </div>
                <div class="clearfix" ></div>
            </div>
        </div>
    </div>

{% endblock body %}